# Service to run: lms or cms
SERVICE=lms
# Public port to bind inside the container
PORT=8000
# Gunicorn runtime tuning
WEB_CONCURRENCY=2
LOG_LEVEL=info
# Skip heavy asset builds by default; set to false to compile webpack + sass
SKIP_ASSETS=true
# Apply DB migrations on startup (requires DB config to be set up)
RUN_MIGRATIONS=false
# Optional: override Django settings module to Postgres-based config
DJANGO_SETTINGS_MODULE=lms.envs.postgres

# Postgres configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=robeli
POSTGRES_USER=robeli
POSTGRES_PASSWORD=changeme
POSTGRES_SSLMODE=prefer